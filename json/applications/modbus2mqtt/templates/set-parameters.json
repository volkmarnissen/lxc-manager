{
  "name": "Modbus2Mqtt Parameters",
  "description": "Set application-specific parameters for Modbus2Mqtt",
  "parameters": [
    {
      "id": "hostname",
      "name": "OS Hostname",
      "type": "string",
      "default": "modbus2mqtt",
      "required": true,
      "description": "Hostname for the Modbus2Mqtt OS"
    },

    {
      "id": "usb_bus_device",
      "name": "USB Serial Port",
      "type": "enum",
      "required": false,
      "enumValuesTemplate": "list-host-usb-serial-ports.json",
      "description": "Select USB serial port to map to the container. Format: bus:device (e.g., 1:3). The port will be mapped as /dev/ttyUSB0 in the container."
    }
  ],
  "commands": [
    {
      "properties": [
        { "id": "ostype", "value": "alpine" },
        { "id": "command", "value": "modbus2mqtt" },
        { "id": "package", "value": "modbus2mqtt" },
        { "id": "owned_paths", "value": "" }, 
        { "id": "volumes", "value": "data=/data\nconfig=/config\nssl=/ssl" },
        { "id": "packages", "value": "nodejs npm git openrc" },
        { "id": "command_args", "value": "-c /config -d /data -s /ssl" }
       
      ]
    }
  ]
}
