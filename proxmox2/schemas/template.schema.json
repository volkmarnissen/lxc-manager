{
  "$id": "https://github.com/modbus2mqtt/proxmoxlxcinstaller/template",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "template",
  "type": "object",
  "properties": {
    "execute_on": {
      "enum": ["proxmox","lxc"]
    },
      "if": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "type": { "enum": [ "string", "number","enum", "boolean" ]},
            "description": { "type": "string" },
            "required": { "type": "boolean" , "default": false },
            "secure": { "type": "boolean" , "default": false },
            "default": { "type": ["string", "number", "boolean"] },
            "enumValues": { 
              "type": "array",
              "items": { "type": "string" }   
              }
        },
        "required": ["type", "name"],
        "if": {
          "properties": {
            "type": { "const": "enum" }
          }
        },  
        "then": {
          "required": ["enumValues"]
        }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
        "commands": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "type": { "enum": ["command", "script", "template"],"default": "command" },
              "name": { "type": "string" ,  "maxLength": 20},
              "execute": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["type","execute" ]
          }
        }
      }
    },
    "required": [ "commands", "execute_on", "name" ]
}
