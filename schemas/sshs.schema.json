{
  "$id": "sshs",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SSH Configurations",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "host": { "type": "string" },
      "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
      "current": { "type": "boolean" }
    },
    "required": ["host"],
    "additionalProperties": false
  }
}
